{% extends "ROTInschrijfBundle::layout.html.twig" %}

{# Zorgen dat de pagina titel, Hoofdtitel en subtitel worden aangepast aan de taal van de user #}

{% block pageTitle %}
    {% if lang == 'nl' %}
        {{ siteRegistratieTitel | raw }}
    {% else %}
        {{ siteRegistratieTitelENG | raw }}
    {% endif %}
{% endblock %}

{%  block siteTitle %}
    {% if lang == 'nl' %}
        {{ siteTitel | raw }}
    {% else %}
        {{ siteTitelENG | raw }}
    {% endif %}
{% endblock %}

{%  block subTitle %}
    {% if lang == 'nl' %}
        {{ siteOnderTitel | raw }}
    {% else %}
        {{ siteOnderTitelENG | raw }}
    {% endif %}
{% endblock %}

{% block page %}

    <div class="text-wrapper" {% if content == NULL %}style="display: none"{% endif %}>
        <div class="NL" {% if lang == 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
            <span class="boldlabel">{{ content | raw }}</span><div class="clear-both"></div>
        </div>
        <div class="EN" {% if lang != 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
            <span class="boldlabel">{{ content | raw }}</span><div class="clear-both"></div>
        </div>
    </div>

    <form class="inschrijving" name="inschrijfStap5" action="{{ path('rot_inschrijf_inschrijf_savestap5') }}" method="post">

        <div class="inschrijf-block inschrijf-naw inschrijf-naw-fokmaat">

            <div class="text-wrapper">
                <div class="NL" {% if lang == 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
                    <span class="boldlabel">Gegevens van de fokkemaat</span><div class="clear-both"></div>
                </div>
                <div class="EN" {% if lang != 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
                    <span class="boldlabel">Personalia of the Co-Sailor</span><div class="clear-both"></div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-text-field">
                    <div class="label-input">
                        {{ form_label(form.fokmaatVoornaam, lang == 'nl' ? "Voornaam" : "Firstname" ) }}

                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatVoornaam) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-text-field">
                    <div class="label-input">
                        {{ form_label(form.fokmaatTussenVoegsel, lang == 'nl' ? "Tussenvoegsel" : "Middlename" ) }}
                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatTussenVoegsel) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-text-field">
                    <div class="label-input">
                        {{ form_label(form.fokmaatAchternaam, lang == 'nl' ? "Achternaam" : "Lastname" ) }}

                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatAchternaam) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-text-field clear-both">
                    <div class="label-input">
                        {{ form_label(form.fokmaatAdres, lang == 'nl' ? "Adres" : "Street" ) }}

                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatAdres) }}
                    </div>
                </div>

                <div class="input input-number clear-both">
                    <div class="label-input">{{ form_label(form.fokmaatHuisnummer, lang == 'nl' ? "Huisnummer" : "Number" ) }}

                    </div>
                    <div class="field-input field-input-number">
                        {{ form_widget(form.fokmaatHuisnummer) }}
                    </div>
                </div>

                <div class="input input-postcode clear-both">
                    <div class="label-input">
                        {{ form_label(form.fokmaatPostcode, lang == 'nl' ? "Postcode" : "Zip-code" ) }}

                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatPostcode) }}
                    </div>
                </div>

                <div class="input input-text-field clear-both">
                    <div class="label-input">
                        {{ form_label(form.fokmaatWoonplaats, lang == 'nl'? "Woonplaats" : "City" ) }}

                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatWoonplaats) }}
                    </div>
                </div>
                <div class="input input-text-field clear-both">
                    <div class="label-input">
                        {{ form_label(form.fokmaatLand, lang == 'nl'? "Land" : "Country" ) }}

                    </div>
                    <div class="field-input field-input-text-field">
                        {{ form_widget(form.fokmaatLand) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-datum">
                    <div class="label-input">
                        {{ form_label(form.fokmaatDOB, lang == 'nl' ? "Geboortedatum" : "Date of birth" ) }}

                    </div>
                    <div class="field-input field-input-datum">
                        {{ form_widget(form.fokmaatDOB) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-option">
                    <div class="label-input">
                        {{ form_label(form.fokmaatNationaliteit, lang == 'nl' ? "Nationaliteit" : "Nationality" ) }}

                    </div>
                    <div class="field-input field-input-option">
                        {{ form_widget(form.fokmaatNationaliteit) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-radio-button">
                    <div class="label-input">
                        {{ form_label(form.fokmaatGeslacht, lang == 'nl' ? "Geslacht" : "Gender" ) }}

                    </div>
                    <div class="field-input field-input-radio-button">
                        {{ form_widget(form.fokmaatGeslacht) }}
                        {{ form_widget(form.fokmaatGeslacht) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="inschrijf-block inschrijf-watersport inschrijf-watersport-fokmaat">
            <div class="text-wrapper">
                <div class="NL" {% if lang == 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
                    <span class="boldlabel">Bemanningslicentie</span><div class="clear-both"></div>
                </div>
                <div class="EN" {% if lang != 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
                    <span class="boldlabel">Crew licence number</span><div class="clear-both"></div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-watersportbond">
                    <div class="label-input">
                        {{ form_label(form.fokmaatBemanningslicentie, lang == 'nl' ? "Heeft u een bemaningslicentie?" : "Do you have a crew licence?" ) }}
                    </div>
                    <div class="field-input field-input-number" onchange="ToggleField();">
                        {{ form_widget(form.fokmaatBemanningslicentie) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both" id="bemanningslicentieNrId">
                <div class="input input-watersportbondNr">
                    <div class="label-input">
                        {{ form_label(form.fokmaatBemanningslicentieNr, lang == 'nl' ? "Bemanningslicentie lidmaatschapsnummer" : "Crew licence number" ) }}
                    </div>
                    <div class="field-input field-input-number">
                        {{ form_widget(form.fokmaatBemanningslicentieNr) }}
                    </div>
                </div>
            </div>
        </div>
        
        <!-------------------------- Robin Verweij 5-12-2013 Opgelost met JavaScript i.v.m. gebrek aan kennis. Latere aanpassing naar PhP gewenst.--->
        <script type="text/javascript">
            var c = document.getElementById("stap5_fokmaatBemanningslicentie").value;
                if(c === "1")
                {
                    document.getElementById('bemanningslicentieNrId').style.display = 'block';
                    document.getElementById("stap5_fokmaatBemanningslicentieNr").required = true;
                }
                else
                {
                    document.getElementById('bemanningslicentieNrId').style.display = 'none';
                    document.getElementById("stap5_fokmaatBemanningslicentieNr").value = "";
                    document.getElementById("stap5_fokmaatBemanningslicentieNr").required = false;
                }
            
            function ToggleField()
            {
                var c = document.getElementById("stap5_fokmaatBemanningslicentie").value;
                if(c === "1")
                {
                    document.getElementById('bemanningslicentieNrId').style.display = 'block';
                    document.getElementById("stap5_fokmaatBemanningslicentieNr").required = true;
                }
                else
                {
                    document.getElementById('bemanningslicentieNrId').style.display = 'none';
                    document.getElementById("stap5_fokmaatBemanningslicentieNr").value = "";
                    document.getElementById("stap5_fokmaatBemanningslicentieNr").required = false;
                }
            }
         </script>


        <div class="inschrijf-block inschrijf-contact inschrijf-contact-fokmaat">
            <div class="text-wrapper">
                <div class="NL" {% if lang == 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
                    <span class="boldlabel">Contactgegevens van de fokkemaat</span><div class="clear-both"></div>
                </div>
                <div class="EN" {% if lang != 'nl' %}style="display:block;" {% else %} style="display:none"{% endif %}>
                    <span class="boldlabel">Contactinformation of the Co-sailor</span><div class="clear-both"></div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input label-input-number">
                    <div class="label-input">
                        {{ form_label(form.fokmaatMobielnr, lang == 'nl' ? "Telefoonnummer" : "Telephone" ) }}

                    </div>
                    <div class="field-input field-input-number">
                        {{ form_widget(form.fokmaatMobielnr) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-number">
                    <div class="label-input">
                        {{ form_label(form.fokmaatNoodnr, lang == 'nl' ? "Telefoonnummer bij nood" : "Emergency number" ) }}

                    </div>
                    <div class="field-input field-input-number">
                        {{ form_widget(form.fokmaatNoodnr) }}
                    </div>
                </div>
            </div>

            <div class="inschrijf-row clear-both">
                <div class="input input-email">
                    <div class="label-input">
                        {{ form_label(form.fokmaatEmail, lang == 'nl' ? "E-mail adres" : "Email address" ) }}

                    </div>
                    <div class="field-input field-input-email">
                        {{ form_widget(form.fokmaatEmail) }}
                    </div>
                </div>

                <div class="input input-email clear-both">
                    <div class="label-input">
                        {{ form_label(form.fokmaatEmailConf, lang == 'nl' ? "Bevestig uw e-mail adres" : "Confirm email" ) }}

                    </div>
                    <div class="field-input field-input-email">
                        {{ form_widget(form.fokmaatEmailConf) }}
                    </div>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}

        {{ include('ROTInschrijfBundle:Inschrijf:formControls.html.twig', {
            step: step,
            pStep: pStep
        }) }}
    </form>
{% endblock %}
