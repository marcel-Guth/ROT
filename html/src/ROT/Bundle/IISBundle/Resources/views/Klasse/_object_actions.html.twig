{% set route = app.request.attributes.get('_route') %}
<ul class="buttons_large">
    <li><a href="{{path('rot_iis_klasse_index')}}">Index</a></li>
    {% if route != 'rot_iis_klasse_new' %}
        {% if route != 'rot_iis_klasse_show' %}
            <li><a href="{{path('rot_iis_klasse_show', {'id': klasse.id})}}">Bekijk</a></li>
        {% endif %}
        {% if is_granted('ROLE_WIJZIG_IIS') %}
            {% if route != 'rot_iis_klasse_edit' %}
                <li><a href="{{path('rot_iis_klasse_edit', {'id': klasse.id})}}">Wijzig</a></li>
            {% endif %}
            <li><a href="{{path('rot_iis_klasse_delete', {'id': klasse.id})}}" data-method="DELETE">Verwijder</a></li>
        {% endif %}
        {% if route != 'rot_iis_klasse_log' %}
            <li><a href="{{ path('rot_iis_klasse_log', {'id': klasse.id}) }}">Log</a></li>
        {% endif %}
    {% endif %}
</ul>