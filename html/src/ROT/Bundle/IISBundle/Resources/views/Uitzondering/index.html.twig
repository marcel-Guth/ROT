{% extends "ROTIISBundle::layout.html.twig" %}
{% block title %}Uitzonderingen{% if active_filter %} (gefilterd - "{{ active_filter.name }}"){% endif %}{% endblock %}
{% block inner_content %}
    <ul class="buttons_large">
        <li>
            <a href="#" id="admin-filter-toggle">Filter</a>
        </li>
        {% if is_granted('ROLE_WIJZIG_IIS') %}
        <li>
            <a href="{{path('rot_iis_uitzondering_new')}}">Toevoegen</a>
        </li>
        {% endif %}
    </ul>
    <div id="admin-filter" style="{{ active_filter ? '' : 'display: none'}}" class="ui-widget-header ui-corner-all">
        <ul class="buttons_small">
            <li>Filters</li>
            <li>
                <select id="admin-filter-select">
                    <option value="{{ path('rot_iis_uitzondering_index') }}">-</option>
                    {% for filter in filters %}
                        <option value="{{ path('rot_iis_uitzondering_filter', {'id': filter.id}) }}" {{ active_filter == filter ? 'selected' : '' }}>{{ filter.name }}</option>
                    {%  endfor %}
                </select>
            </li>
            <li><a href="{{ path('rot_iis_uitzondering_newfilter') }}">Nieuwe filter</a></li>
            {% if active_filter %}
                <li><a href="{{ path('rot_iis_uitzondering_editfilter', {'id': active_filter.id}) }}">Wijzig filter</a></li>
                <li><a href="{{ path('rot_iis_uitzondering_deletefilter', {'id': active_filter.id}) }}" data-method="DELETE">Verwijder filter</a></li>
            {% endif %}
        </ul>
    </div>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Uitzondering</th>
                <th>Afkorting</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            {% for uitzondering in uitzonderingen %}
            <tr data-id="{{uitzondering.id}}">
                <td>{{uitzondering.uitzondering}}</td>
                <td>{{uitzondering.afkorting}}</td>
                <td>
                    <a href="{{path('rot_iis_uitzondering_show', {'id': uitzondering.id})}}"><img src="{{asset("bundles/rotadmin/images/show.png")}}" /></a>
                    {% if is_granted("ROLE_WIJZIG_IIS") %}
                        <a href="{{path('rot_iis_uitzondering_edit', {'id': uitzondering.id})}}"><img src="{{asset("bundles/rotadmin/images/edit.png")}}" /></a>
                        <a href="{{path('rot_iis_uitzondering_delete', {'id': uitzondering.id})}}" data-method="DELETE"><img src="{{asset("bundles/rotadmin/images/trash.png")}}" /></a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}