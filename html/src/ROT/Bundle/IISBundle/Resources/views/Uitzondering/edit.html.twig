{% extends "ROTIISBundle::layout.html.twig" %}
{% block title %}Wijzig uitzondering "{{uitzondering}}"{% endblock %}
{% block inner_content %}
    {{ include('ROTIISBundle:Uitzondering:_object_actions.html.twig', {"uitzondering": uitzondering}) }}
    <form novalidate action="{{ path('rot_iis_uitzondering_update', {'id': uitzondering.id}) }}" method="POST" {{ form_enctype(form) }}>
        {{ include('ROTIISBundle:Uitzondering:_form.html.twig', {'form': form}) }}
        {{ form_rest(form) }}
        <input type="hidden" name="_method" value="PUT" />
        <input type="submit" value="Opslaan" />
    </form>
{% endblock %}