{% set route = app.request.attributes.get('_route') %}
<ul class="buttons_large">
    <li><a href="{{path('rot_iis_uitzondering_index')}}">Index</a></li>
    {% if route != 'rot_iis_uitzondering_new' %}
        {% if route != 'rot_iis_uitzondering_show' %}
            <li><a href="{{path('rot_iis_uitzondering_show', {'id': uitzondering.id})}}">Bekijk</a></li>
        {% endif %}
        {% if is_granted('ROLE_WIJZIG_IIS') %}
            {% if route != 'rot_iis_uitzondering_edit' %}
                <li><a href="{{path('rot_iis_uitzondering_edit', {'id': uitzondering.id})}}">Wijzig</a></li>
            {% endif %}
            <li><a href="{{path('rot_iis_uitzondering_delete', {'id': uitzondering.id})}}" data-method="DELETE">Verwijder</a></li>
        {% endif %}
        {% if route != 'rot_iis_uitzondering_log' %}
            <li><a href="{{ path('rot_iis_uitzondering_log', {'id': uitzondering.id}) }}">Log</a></li>
        {% endif %}
    {% endif %}
</ul>