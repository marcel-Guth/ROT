{% block form_row %}
    <div class="form-row {% if form.vars.errors %}form-row-error{% endif %}">
        <div class="label">{{ form_label(form) }}</div>
        <div class="widget">{{ form_widget(form) }}</div>
        <div class="error">{{ form_errors(form) }}</div>
        <div class="clearfix"></div>
    </div>
{% endblock %}